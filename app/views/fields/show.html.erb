<div class="p-4 bg-white rounded shadow">
  <div class="mb-6">
    <%= link_to "← Back", fields_path, class: "inline-block px-5 py-2 bg-blue-200 text-blue-700 rounded hover:bg-blue-300 transition" %>
  </div>

  <h1 class="text-2xl font-bold mb-4 text-gray-800"><%= @field.name %></h1>

  <div class="mb-4" data-controller="readonly-map" data-geojson="<%= RGeo::GeoJSON.encode(@field.shape).to_json if @field.shape %>">
    <div id="readonly-map" class="h-96 rounded border shadow"></div>
  </div>

  <p class="text-lg mb-6 text-gray-600">
    <span class="font-semibold">Area:</span>
    <span class="text-green-700"><%= @field.area.to_f.round(2) %> м²</span>
  </p>

  <% if @field.shape %>
    <h3 class="text-lg font-semibold mb-2 text-gray-700">GeoJSON:</h3>
    <pre class="bg-gray-100 rounded p-4 text-sm text-gray-800 overflow-x-auto mb-4"><%= JSON.pretty_generate(RGeo::GeoJSON.encode(@field.shape)) %></pre>
  <% else %>
    <p class="text-red-600 font-semibold">Area missing</p>
  <% end %>
</div>
